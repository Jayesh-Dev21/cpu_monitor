#fun_getAllCpus

#--------------------------------------------------------
# discovers all cpu cores in the system
# populates the ALL_CPUS array with proper numerical sorting
#--------------------------------------------------------

get_all_cpus() {
  ALL_CPUS=(/sys/devices/system/cpu/cpu[0-9]*)
  ALL_CPUS=("${ALL_CPUS[@]##*/}")
  
  # sort numerically by extracting cpu number
  IFS=$'\n' ALL_CPUS=($(sort -V <<< "${ALL_CPUS[*]}"))
  unset IFS
}

